files:
    "/etc/httpd/conf.d/bad_jorgee.conf":
        mode: "000644"
        owner: root
        group: root
        content: |
            RewriteEngine On
            <IfModule mod_rewrite.c>
            RewriteCond %{HTTP_USER_AGENT} ^.*(jorgee|morfeus|other).* [NC]
            RewriteRule ^(.*)$ - [L,R=403]
            </IfModule>
